    <%# jQuery %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>

    <link rel="stylesheet" href="/css/style.css" />

    <title>About</title>

    <style type="text/css">
        body {
            margin: 0px;
            padding: 0px;
            text-align: center;
            background-color: #F5F5F5;
        }

        #main {
            margin-left: auto;
